---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Cebicheria Rosita">


<style is:inline>
  @import 'https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css';
    .swiper {
      width: 100%;
      height: 100%;
    }

    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .swiper {
      margin-left: auto;
      margin-right: auto;
    }
</style>

<div class="container px-4 h-56 sm:w-[100%] lg:w-[100%] xl:w-[100%] 2xl:w-[100%] mx-auto">
  <div class="swiper swiperTop h-64">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <img src="https://source.unsplash.com/1280x720/?food" alt="Image Slider">
      </div>
      <div class="swiper-slide">
        <img src="https://source.unsplash.com/1280x720/?food-fish" alt="Image Slider">
      </div>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>


